<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Go Back</a>
        <h1 class="text-xl tracking-tighter mb-3 mt-3">Read User</h1>
        <div class="users flex gap-6 flex-wrap">
            <% users.forEach(function(user){ %>
                <div class="user bg-zinc-800 p-4 w-72 rounded-lg">
                    <div class="w-full h-52 bg-zinc-700 rounded-lg">
                        <img class="w-full h-full object-cover" src="<%=user.image%>" alt="">
                    </div>
                    <h3 class="mt-3 tracking-tighter text-xl"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-6 mt-10">
                        <a class="text-zinc-300 " href="/edit/<%=user._id%>">Edit</a>
                        <a class="text-red-400" href="/delete/<%=user._id%>">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>